generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  business_id  String              @id @db.VarChar(22)
  name         String              @unique
  address      String
  city         String
  state        String?             @db.VarChar(2)
  zipCode      String?
  latitude     Float?
  longitude    Float?
  stars        Float?
  review_count Int?
  is_open      Int
  reviews      Review[]
  hours        String[]
  categories   Business_Category[]
}

model User {
  user_id      String    @id @db.VarChar(22)
  username     String    @unique
  password     String    @unique
  email        String?   @unique
  firstname    String?
  lastname     String?
  created_at   DateTime  @default(now())
  review_count Int?
  reviews      Review[]
  comments     Comment[]
}

model Review {
  review_id   String    @id @db.VarChar(22)
  text        String
  stars       Int
  created_at  DateTime  @default(now())
  updated_at  DateTime  @default(now())
  author_id   String
  author      User      @relation(fields: [author_id], references: [user_id])
  business_id String
  business    Business  @relation(fields: [business_id], references: [business_id])
  comments    Comment[]

  @@unique([author_id, business_id])
}

model Comment {
  comment_id String   @id @db.VarChar(22)
  text       String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  author_id  String
  author     User     @relation(fields: [author_id], references: [user_id])
  review_id  String
  review     Review   @relation(fields: [review_id], references: [review_id])
}

model Category {
  category_id       String              @id @db.VarChar(22)
  category          String
  businesses Business_Category[]
}

model Business_Category {
  business_category_id String   @id @db.VarChar(22)
  business_id          String
  business             Business @relation(fields: [business_id], references: [business_id])
  category_id          String
  category             Category @relation(fields: [category_id], references: [category_id])
}
